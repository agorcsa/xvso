<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/player1_text_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        android:text="@string/player_x" />

    <TextView
        android:id="@+id/player1_result_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/player1_text_widget"/>

    <ImageView
        android:id="@+id/rocket"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rocket" />

    <TextView
        android:id="@+id/player2_text_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:textSize="20sp"
        android:text="@string/player_y" />

    <TextView
        android:id="@+id/player2_result_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player2_text_widget"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="0"/>
</RelativeLayout>